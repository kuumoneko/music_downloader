{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "outDir": "./app",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "./server/**/*.ts"
  ],
  "exclude": [
    "/node_modules",
    "**/*.json",
    "**/*.txt",
  ]
}